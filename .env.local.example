# PayPal Configuration
# Copy this file to .env.local and fill in your actual credentials
# WARNING: .env.local should NEVER be committed to version control

# PayPal API Credentials
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_SECRET_KEY=your_paypal_secret_key_here
PAYPAL_MODE=sandbox  # Use 'sandbox' for testing, 'live' for production

# Additional PayPal Settings
PAYPAL_WEBHOOK_ID=your_webhook_id_here
PAYPAL_WEBHOOK_SECRET=your_webhook_secret_here

# Application Configuration
CURRENCY_CODE=EUR
RETURN_URL=https://www.christian-boehme.com/shop/success
CANCEL_URL=https://www.christian-boehme.com/shop/cart

# Email Configuration for Order Confirmations
NOTIFICATION_EMAIL=info@christian-boehme.com
